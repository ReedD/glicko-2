{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "*": ["*"]
    },
    "pretty": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
